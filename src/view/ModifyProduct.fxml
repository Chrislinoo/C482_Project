<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ModifyProduct">
    <children>
        <GridPane layoutX="35.0" layoutY="213.0" prefHeight="165.0" prefWidth="242.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="88.0" minWidth="10.0" prefWidth="77.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" minWidth="10.0" prefWidth="84.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="87.0" minWidth="10.0" prefWidth="85.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="87.0" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label fx:id="modProdInvLabel" text="Inv" />
                <Label fx:id="modProdPriceLabel" text="Price" GridPane.rowIndex="1" />
                <Label fx:id="modProdMaxLabel" text="Max" GridPane.rowIndex="2" />
                <TextField fx:id="modProdInvTF" GridPane.columnIndex="1" />
                <TextField fx:id="modProdPriceTF" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="modProdMaxTF" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <TextField fx:id="modProdMinTF" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                <Label fx:id="modProdMinLabel" text="Min" GridPane.columnIndex="2" GridPane.rowIndex="2">
                    <padding>
                  <Insets left="15.0" />
                    </padding></Label>
            </children>
        </GridPane>
        <GridPane layoutX="35.0" layoutY="105.0" prefHeight="103.0" prefWidth="214.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="103.0" minWidth="10.0" prefWidth="53.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="183.0" minWidth="10.0" prefWidth="162.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label fx:id="modProdIDLabel" text="ID" />
                <Label fx:id="modProdNameLabel" text="Name" GridPane.rowIndex="1" />
                <TextField fx:id="modProdIDTF" editable="false" promptText="Auto Gen - Disabled" GridPane.columnIndex="1" />
                <TextField fx:id="modProdNameTF" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </children>
        </GridPane>
        <Label fx:id="modProductLabel" layoutX="35.0" layoutY="49.0" text="Modify Product">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TableView fx:id="modProdTopTable" layoutX="400.0" layoutY="69.0" prefHeight="200.0" prefWidth="380.0">
            <columns>
                <TableColumn fx:id="topCol1MP" text="Part ID" />
                <TableColumn fx:id="topCol2MP" text="Part Name" />
                <TableColumn fx:id="topCol3MP" prefWidth="95.0" text="Inventory Level" />
                <TableColumn fx:id="topCol4MP" prefWidth="125.0" text="Price/ Cost per Unit" />
            </columns>
        </TableView>
        <TableView fx:id="modProdBottomTable" layoutX="400.0" layoutY="321.0" prefHeight="200.0" prefWidth="380.0">
            <columns>
                <TableColumn fx:id="bottomCol1MP" text="Part ID" />
                <TableColumn fx:id="bottomCol2MP" text="Part Name" />
                <TableColumn fx:id="bottomCol3MP" prefWidth="95.0" text="Inventory Level" />
                <TableColumn fx:id="bottomCol4MP" prefWidth="125.0" text="Price/ Cost per Unit" />
            </columns>
        </TableView>
        <TextField fx:id="modProdSearchTF" layoutX="618.0" layoutY="34.0" onAction="#onActionSearchText" prefHeight="25.0" prefWidth="162.0" promptText="Search by Part ID or Name" />
        <Button fx:id="addProductBtn" layoutX="728.0" layoutY="275.0" mnemonicParsing="false" onAction="#onActionAddPart" text="Add" />
        <Button fx:id="cancelProductBtn" layoutX="728.0" layoutY="561.0" mnemonicParsing="false" onAction="#onActionCancelModProd" text="Cancel" />
        <Button fx:id="saveProductBtn" layoutX="630.0" layoutY="561.0" mnemonicParsing="false" onAction="#onActionSaveAssoPart" text="Save" />
        <Button fx:id="removeAssocPartBtn" layoutX="630.0" layoutY="529.0" mnemonicParsing="false" onAction="#onActionRemovePart" prefHeight="25.0" prefWidth="149.0" text="Remove Associated Part" />
    </children>
</AnchorPane>
